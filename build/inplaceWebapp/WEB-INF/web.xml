<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>AllPrescriptionsController</servlet-name>
        <servlet-class>by.hospital.controllers.AllPrescriptionsController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PatientController</servlet-name>
        <servlet-class>by.hospital.controllers.PatientController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HospitalController</servlet-name>
        <servlet-class>by.hospital.controllers.HospitalController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>StartPageController</servlet-name>
        <servlet-class>by.hospital.controllers.StartPageController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HospitalController</servlet-name>
        <url-pattern>/hospital.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SickListPage1Controller</servlet-name>
        <servlet-class>by.hospital.controllers.SickListPage1Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StartPageController</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PatientController</servlet-name>
        <url-pattern>/patient.html</url-pattern>
    </servlet-mapping>



    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>